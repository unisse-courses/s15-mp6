<div class = "body">
    <form id="form" action="/shareInventory" method="POST">
        <table>
            <tr>
                <th colspan="2" style="border-bottom: 2px solid #aaa"><strong>Share {{ name }} to:</strong></th>
            </tr>
            <tr>
                <td><label for="email">Email</label></td>
                <td><input type="email" name="email" id="email"></td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center">{{> messages}}</td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type='hidden' name='inventoryId' id="inventoryId" value='{{ inventoryId }}'>
                    <button name = "submit" id = "submit" value = "Share">Share</button>
                </td>
            </tr>
        </table>
    </form>
    <div><br></div>
    <div id="grid_container">
        {{#if sharedEmails}}
            {{#each sharedEmails}}
                <div class = "inventory">
                    <table>
                        <tr>
                            <td>{{ this }}</td>
                            <td>
                                <form action='/removeEmail' method='POST'>
                                    <input type='hidden' name='sharedEmail' id="sharedEmail" value='{{ this }}'>
                                    <input type="image" src="img/x.png" class="options" alt="Submit" >
                                </form>
                            </td>
                        </tr>
                    </table>
                </div>
            {{/each}} 
        {{else}}
            <div id="message"><p>Not shared yet</p></div>
        {{/if}}
    </div>
    <div><br><br><br></div>
</div>