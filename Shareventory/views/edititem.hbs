<br>
<div class = "body">
    <form id="form" action="/updateItem" method="POST">
        <table>
            <tr>
                <td colspan="4" style="border-bottom: 2px solid #aaa"><strong>Add Item</strong>
                </td>
            </tr>
            <tr>
                <td><label for="name">Name</label></td>
                <td><input type="text" name="name" id="name" value="{{ item.name }}"></td>

                <td><label for="file">Image</label></td>
                <td><input type="file" name="file" id="file" accept="image/*">
                </td>
            </tr>
            <tr>
                <td><label for="description">Description</label></td>
                <td><input type="text" name="description" id="description" value="{{ item.description }}"></td>

                <td><label for="quantity">Quantity</label></td>
                <td><input type="number" name="quantity" id="quantity" value="{{ item.quantity }}"></td>
            </tr>
            <tr>
                <td colspan="4">{{> messages}}</td>
            </tr>
            <tr>
                <td colspan="4">
                    <button name = "submit" id = "submit" value = "Update">Update</button>
                </td>
            </tr>
        </table>
    </form>
</div>
